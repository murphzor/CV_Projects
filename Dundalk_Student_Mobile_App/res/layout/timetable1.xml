<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/online_timetables"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Online Timetable" />

    <Button
        android:id="@+id/local_timetables"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/online_timetables"
        android:layout_below="@+id/online_timetables"
        android:layout_marginTop="21dp"
        android:text="Local Timetable" />

</RelativeLayout>